# ===================================
# 智能售前售后系统 - 环境变量配置
# ===================================

# ------------------
# 数据库配置
# ------------------
# 开发环境使用SQLite
DATABASE_URL=sqlite+aiosqlite:///./customer_system.db

# 生产环境使用PostgreSQL（取消注释并配置）
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/customer_system

# ------------------
# JWT安全配置
# ------------------
# ⚠️ 生产环境必须修改为随机字符串（至少32位）
JWT_SECRET_KEY=your-super-secret-key-change-in-production-12345678

# ------------------
# 应用配置
# ------------------
# 应用域名（用于生成安全链接）
APP_DOMAIN=http://localhost:8000

# 生产环境域名示例：
# APP_DOMAIN=https://your-domain.com

# 服务端口
PORT=8000

# ------------------
# Redis缓存配置
# ------------------
# Redis连接URL（可选，不配置则禁用缓存功能）
# REDIS_URL=redis://localhost:6379/0

# 带密码的Redis示例：
# REDIS_URL=redis://:password@localhost:6379/0

# ------------------
# 企业微信配置
# ------------------
# 企业ID
CORP_ID=your_corp_id

# 应用密钥
CORP_SECRET=your_corp_secret

# 应用AgentID
AGENT_ID=1000002

# 群机器人Webhook URL（用于推送工单到内部群）
GROUP_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_webhook_key

# ------------------
# 微信公众号配置（可选）
# ------------------
# 公众号AppID
# WECHAT_APPID=your_appid

# 公众号AppSecret
# WECHAT_APPSECRET=your_appsecret

# 公众号Token（用于验证消息）
# WECHAT_TOKEN=your_token

# ------------------
# AI服务配置（可选）
# ------------------
# OpenAI API Key（如果使用GPT进行意图识别）
# OPENAI_API_KEY=sk-your-openai-key

# Azure OpenAI配置
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_KEY=your_azure_openai_key
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# ------------------
# 调试模式
# ------------------
# 开发环境设置为True，生产环境设置为False
DEBUG=True

# ------------------
# 日志配置
# ------------------
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ------------------
# CORS配置
# ------------------
# 允许的跨域来源（逗号分隔）
# ALLOWED_ORIGINS=https://your-domain.com,https://work.weixin.qq.com

# ------------------
# 定时任务配置
# ------------------
# 每日报表发送时间（24小时制，如：09:00）
DAILY_REPORT_TIME=09:00

# ------------------
# 外部系统集成
# ------------------
# CRM系统API地址
# CRM_API_URL=https://your-crm.com/api

# CRM API密钥
# CRM_API_KEY=your_crm_api_key
